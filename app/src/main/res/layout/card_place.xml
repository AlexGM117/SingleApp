<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardPlace"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:padding="8dp"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/placeImage"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/restaurante"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:padding="8dp" >

            <TextView
                android:id="@+id/placeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nombre de restaurante"
                android:textColor="@android:color/black"
                style="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/placeLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Polanco CDMX"
                android:textColor="@color/colorGrayDark"/>

            <TextView
                android:id="@+id/placeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="DescripcioÌn del restaurante..."
                android:textColor="@color/colorGrayMed"/>

            <RatingBar
                android:id="@+id/placeScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:numStars="5"
                android:rating="5"
                style="@style/CustomRatingBar"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>